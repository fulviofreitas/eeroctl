{
  "branches": ["master"],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "refactor", "release": false },
          { "type": "test", "release": false },
          { "type": "build", "release": false },
          { "type": "ci", "release": false },
          { "breaking": true, "release": "major" }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features", "hidden": false },
            { "type": "fix", "section": "ðŸ› Bug Fixes", "hidden": false },
            { "type": "perf", "section": "âš¡ Performance", "hidden": false },
            { "type": "revert", "section": "âª Reverts", "hidden": false },
            { "type": "docs", "section": "ðŸ“š Documentation", "hidden": false },
            { "type": "style", "section": "ðŸ’„ Styling", "hidden": true },
            { "type": "chore", "section": "ðŸ”§ Chores", "hidden": true },
            { "type": "refactor", "section": "â™»ï¸ Refactoring", "hidden": false },
            { "type": "test", "section": "ðŸ§ª Testing", "hidden": true },
            { "type": "build", "section": "ðŸ—ï¸ Build System", "hidden": true },
            { "type": "ci", "section": "ðŸ‘· CI/CD", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.1.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo ${nextRelease.version} > VERSION && sed -i 's/^version = \"[0-9]*\\.[0-9]*\\.[0-9]*\"/version = \"${nextRelease.version}\"/' pyproject.toml && sed -i 's/__version__ = \"[^\"]*\"/__version__ = \"${nextRelease.version}\"/' src/eero_cli/__init__.py"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "VERSION",
          "pyproject.toml",
          "src/eero_cli/__init__.py"
        ],
        "message": "chore(release): v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
